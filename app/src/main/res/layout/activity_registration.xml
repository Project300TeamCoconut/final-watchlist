    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="#ADFFFFFF"
        android:hint="name"
        android:textAlignment="center" />

    <!--<RadioGroup
        android:layout_width="match_parent"
